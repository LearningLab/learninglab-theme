{% extends "base.twig" %}

{% block header %}
<div class="container">
	<div class="row">
		<h1 class="col-md-12">{{ post.title }}</h1>
	</div>
</div>
{% endblock %}

{% block posts %}

<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
	<section class="article-content">
		<header>
			<h1 class="entry-title hidden" itemprop="headline">{{ post.title }}</h1>
			{% include "includes/byline.twig" %}
		</header>
		<div class="social">
			<a href="https://twitter.com/share" class="twitter-share-button" data-lang="en">Tweet</a>

			<div class="fb-like" data-href="{{ post.link }}" data-width="250" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
		</div>
		<div class="article-body">
			{{ post.content }}
		</div>
	</section>

	<section class="comments">
		{{ function('comments_template') }}
	</section>

</article>

{% endblock %}

{% block sidebar %}

{{ sidebars['sidebar-single'] }}

{% endblock %}
