{% extends "base.twig" %}

{% block header %}
<div class="container">
	<div class="row">
		<h1 class="col-md-12">{{ post.title }}</h1>
	</div>
</div>
{% endblock %}

{% block posts %}

<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
	<section class="article-content">
		<header>
			<h1 class="entry-title hidden" itemprop="headline">{{ post.title }}</h1>

			<h5 class="byline">
				<span class="by-author">
					<span class="by">By:</span> 
					<span class="author vcard" itemprop="author">
						<a href="{{ post.author.path }}" title="Posts by {{ post.author.name }}" class="url fn" rel="author">{{ post.author.name }}</a>
					</span>
				</span>
				<span class="sep"> | </span>
				<time class="entry-date updated dtstamp pubdate" datetime="{{ post.post_date }}">{{ post.display_date }}</time>
			</h5>

		</header>

		<div class="article-body">
			{{ post.content }}
		</div>
	</section>

	<section class="comments">
		{{ function('comments_template') }}
	</section>

</article>

{% endblock %}

{% block sidebar %}

{{ sidebars['sidebar-single'] }}

{% endblock %}
